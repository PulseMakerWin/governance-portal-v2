{
    "presets": [
      [
        "next/babel",
        {
          "preset-react": {
            "importSource": "@theme-ui/core", // or "@theme-ui/core"
            "runtime": "automatic", // Change to automatic when v0.10.0 of theme-ui
            "throwIfNamespace": false
          }
        }
      ]
    ],
    "plugins": ["superjson-next"],
    "env": {
      "test": {
        "plugins": [
          ["istanbul", {
            "exclude": [
              "**/*.d.ts",
              "**/{node_modules,coverage}/**",
              "**/*.test.ts",
              "**/*.spec.ts",
              "cypress/**/*.ts"
            ]
          }]
        ]
      }
    }
}